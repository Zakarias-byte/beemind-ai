# BeeMind Production Environment Configuration
# Copy this file to .env and fill in the values

# Domain Configuration
DOMAIN=beemind.dev
EMAIL=admin@beemind.dev

# Database Configuration
DB_PASSWORD=your_secure_db_password_here
POSTGRES_DB=beemind
POSTGRES_USER=beemind

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT and Authentication
JWT_SECRET=your_jwt_secret_key_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://beemind.dev

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=https://beemind.dev,https://www.beemind.dev

# MLFlow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_BACKEND_STORE_URI=postgresql://beemind:${DB_PASSWORD}@postgres:5432/mlflow
MLFLOW_DEFAULT_ARTIFACT_ROOT=/mlflow/artifacts

# Monitoring
GRAFANA_PASSWORD=your_grafana_password_here

# Application Settings
ENVIRONMENT=production
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.beemind.dev

# SSL Configuration (automatically managed by Let's Encrypt)
SSL_EMAIL=admin@beemind.dev

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Security Settings
SESSION_TIMEOUT_HOURS=24
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=5

# Feature Flags
ENABLE_MONITORING=true
ENABLE_BLOCKCHAIN=true
ENABLE_MLFLOW=true
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Settings
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65

# Development Settings (set to false in production)
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
